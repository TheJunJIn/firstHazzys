{% extends 'default.njk' %}

{% block content %}
<main class="shell-main shell-main--mypage">
  <div class="main-header" style="background-image:url(/cmsstatic/asset/images/myapge-visual.jpg);">
    {% include "partials/mypage/main-header.njk" %}
  </div>
  <div class="main-content">
    <div class="main-container main-content__body">
      <div class="main-content__main main-content__main--member">
        <div class="main-content__header">
          <h3 class="main-content__title">본인 휴대전화 인증</h3>
          <button type="button" class="button main-content__btn-back">
            <i class="sprite-icon sprite-common sprite-common-back">뒤로가기</i>
          </button>
        </div>
        <div class="mypage-member-container">
          <form action="#">
            <div class="verification">

              <!-- 약관 동의 -->
              <div class="verification__agreement agreement" data-foldable>
                <div class="agreement__header">
                  <label class="form-checkbox agreement-check-all">
                    <input type="checkbox" class="checkbox">
                    <span class="name">[필수] 본인 확인을 위한 약관 모두 동의</span>
                  </label>
                  <button type="button" class="button policy-toggle-button" data-foldable-toggle>열기/닫기</button>
                </div>
                <div class="agreement__body" data-foldable-content>
                  <ul class="policy">
                    <li class="policy__item">
                      <label class="policy__name form-checkbox form-checkbox--plain">
                        <input type="checkbox" class="checkbox">
                        <span class="name">[필수] 개인정보 수집 및 이용 동의</span>
                      </label>
                      <button type="button" class="button policy-view-button" data-modal-open="#modalPolicyView">보기</button>
                    </li>
                    <li class="policy__item">
                      <label class="policy__name form-checkbox form-checkbox--plain">
                        <input type="checkbox" class="checkbox">
                        <span class="name">[필수] 고유식별 정보 처리 동의</span>
                      </label>
                      <button type="button" class="button policy-view-button">보기</button>
                    </li>
                    <li class="policy__item">
                      <label class="policy__name form-checkbox form-checkbox--plain">
                        <input type="checkbox" class="checkbox" />
                        <span class="name">[필수] 통신사 이용약관 동의</span>
                      </label>
                      <button type="button" class="button policy-view-button">보기</button>
                    </li>
                    <li class="policy__item">
                      <label class="policy__name form-checkbox form-checkbox--plain">
                        <input type="checkbox" class="checkbox" />
                        <span class="name">[필수] 서비스 이용약관 동의</span>
                      </label>
                      <button type="button" class="button policy-view-button">보기</button>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="verification__form member-form">
                <!-- 이름/성별 -->
                <div class="member-form__field form-block">
                  <div class="form-block__field">
                    <div class="input-block">
                      <input type="text" class="form-text" placeholder="이름">
                    </div>
                  </div>
                  <div class="form-block__field form-block__field--button-3">
                    <div class="form-radio-button-group">
                      <label class="form-radio">
                        <input type="radio" class="radio" name="gender" checked>
                        <span class="name">남</span>
                      </label>
                      <label class="form-radio">
                        <input type="radio" class="radio" name="gender">
                        <span class="name">여</span>
                      </label>
                    </div>
                  </div>
                </div>

                <!-- 생년월일 -->
                <div class="member-form__field">
                  <div class="input-block">
                    <input type="text" class="form-text" placeholder="생년월일 6자리 (예시 : 901010)">
                  </div>
                </div>

                <!-- 이메일 -->
                <div class="member-form__field form-block">
                  <div class="form-block__field">
                    <div class="input-block">
                      <input type="text" class="form-text" placeholder="이메일">
                    </div>
                  </div>
                  <div class="form-block__field form-block__field--domain">
                    <span class="form-select">
                      <select class="select">
                        <option value="">직접 입력</option>
                        <option value="gmail.com">@gmail.com</option>
                        <option value="naver.com">@naver.com</option>
                      </select>
                      <i class="icon"></i>
                    </span>
                  </div>
                </div>

                <!-- 통신사 선택 -->
                <div class="member-form__field">
                  <span class="form-select">
                    <select class="select">
                      <option value="">통신사 선택</option>
                      <option value="SKT">SKT</option>
                      <option value="KT">KT</option>
                    </select>
                    <i class="icon"></i>
                  </span>
                </div>

                <!-- 전화번호 입력 -->
                <div class="member-form__field form-block">
                  <div class="form-block__field form-block__field--phone1">
                    <span class="form-select">
                      <select class="select">
                        <option value="010">010</option>
                        <option value="011">011</option>
                        <option value="016">016</option>
                      </select>
                      <i class="icon"></i>
                    </span>
                  </div>
                  <div class="form-block__field">
                    <div class="input-block">
                      <input type="text" class="form-text" placeholder="휴대폰 번호(-제외)">
                    </div>
                  </div>
                  <div class="form-block__field form-block__field--button-3">
                    <!-- <button type="button" class="form-button">인증번호 전송</button> -->
                    <button type="button" class="form-button active">인증번호 전송</button>
                  </div>
                </div>

                <!-- 인증번호 입력 -->
                <div class="member-form__field form-block form-block--sms-auth">
                  <div class="form-block__field">
                    <div class="input-block">
                      <input type="text" class="form-text" placeholder="인증번호 입력">
                    </div>
                    <p class="countdown-text">남은시간 <em>2</em>분<em>51</em>초</p>
                  </div>
                  <div class="form-block__field form-block__field--button-3">
                    <button type="button" class="form-button form-button--main">확인</button>
                    <button type="button" class="button time-extension-button">시간 연장</button>
                  </div>
                </div>

                <!-- 인증번호 입력 -->
                <div class="member-form__field form-block form-block--sms-auth">
                  <div class="form-block__field">
                    <div class="input-block">
                      <input type="text" class="form-text" placeholder="인증번호 입력">
                    </div>
                    <p class="countdown-text countdown-text--error">
                      <span class="timeout">인증 시간이 초과되었습니다. SMS 재전송을 하시기 바랍니다.</span>
                    </p>
                  </div>
                  <div class="form-block__field form-block__field--button-3">
                    <button type="button" class="form-button form-button--plain">재전송</button>
                  </div>
                </div>

                <div class="member-form__option">
                  <ul class="form-guide">
                    <li class="form-guide__item">가입시 부정확하게 입력하신 개인정보는 본인인증 정보로 대체됩니다.</li>
                  </ul>
                </div>

                <div class="member-form__field member-form__submit">
                  <!-- <button type="button" class="form-button">다음</button> -->
                  <button type="button" class="form-button active">확인</button>
                </div>
              </div>

            </div>
          </form>
        </div>

      </div>

      <div class="main-content__aside">
        <!-- 메뉴 -->
        <ul class="sidebar-menu">
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 쇼핑 내역</p>
            <ul class="menu__list">
              <li class="menu__item">
                <li class="menu__item">
                <a href="#"><i class="sprite-mypage-listsearch-small"></i>주문/배송 조회</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-claim-small"></i>취소/교환/반품</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나만의 혜택</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-coupon-small"></i>쿠폰</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-mileage-small"></i>마일리지</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-badgebook-small"></i>나의 배지</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 쇼핑 태그</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-wish-small"></i>위시 리스트</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-recent-small"></i>최근 본 상품</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-review-small"></i>내 상품평</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-push-small"></i>재입고 알림 내역</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-qna-small"></i>내 문의 내역</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 정보</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-benefit-small"></i>회원 혜택</a>
              </li>
              <li class="menu__item active">
                <a href="#"><i class="sprite-mypage-myinfo-small"></i>내 정보 변경 / 회원 탈퇴</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-address-small"></i>배송지 관리</a>
              </li>
            </ul>
          </li>
        </ul>
        <!-- // 메뉴 -->
      </div>
    </div>
  </div>
</main>
{% endblock %}

{% block modal %}
  {% include "modal/member/find-password.njk" %}
{% endblock modal %}

{% block css %}
<link rel="stylesheet" href="/asset/css/mypage.css" />
{% endblock css %}

{% block js %}
<script src="/asset/js/mypage.js"></script>
{% endblock js %}