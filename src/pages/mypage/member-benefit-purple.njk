<script src="/asset/js/mypage.js"></script>
<script>
function badgeContent(idx){
  if(!idx) {
    idx = 0;
  }
  var badgeContent = $('#badgeSwiperContent');
  badgeContent
    .find(' > .grade')
    .removeClass('active')
    .eq(idx)
    .addClass('active');
}
$(function(){

  var swiper = new Swiper('#badgeSwiper', {
    loop: false,
    init: false,
    // initialSlide:  White: 0, Blue: 1, Red: 2 .... 회원등급에 따라 설정
    initialSlide: 3,
    spaceBetween: 40,
    slidesPerView: 'auto',
    centeredSlides: true,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev'
    }
  });
  swiper.on('slideChange', function(){
    badgeContent(swiper.activeIndex);
  });
  swiper.on('init', function(){
    badgeContent(swiper.activeIndex);
    $(swiper.el).addClass('swiper-container--active');
  });
  swiper.init();
})
</script>
{% endblock js %}