{% block js %}
<script src="/asset/js/mypage.js"></script>
<script>
$(function(){
  new Swiper('.swiper-container--review-photo', {
    loop: false,
    freeMode: true,
    spaceBetween: 10,
    slidesOffsetBefore: 0,
