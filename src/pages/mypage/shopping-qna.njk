{% extends 'default.njk' %}

{% block content %}
<main class="shell-main shell-main--mypage">
  <div class="main-header" style="background-image:url(/cmsstatic/asset/images/myapge-visual.jpg);">
    {% include "partials/mypage/main-header.njk" %}
  </div>
  <div class="main-content">
    <div class="main-container main-content__body">
      <div class="main-content__main main-content__main--shpping">
        <div class="main-content__header main-content__header--sub">
          <h3 class="main-content__title">내 문의 내역</h3>
          <button type="button" class="button main-content__btn-back">
            <i class="sprite-icon sprite-common sprite-common-back">뒤로가기</i>
          </button>
        </div>
        <div class="mypage-shpping-container">
          <div class="my-qna-container">
            <div class="tabs tab--qna">
              <div class="tablist" role="tablist">
                <button type="button" class="tab" role="tab" aria-selected="false">상품 문의 내역</button>
                <button type="button" class="tab" role="tab" aria-selected="true">1:1 문의 내역</button>
              </div>
              <div class="tabpanel">
                <div class="tabpanel">
                  <!-- 문의 목록 -->
                  <div class="my-qna-list">
                    <ul class="qna-list">
                      <li class="qna-list__item">
                        <div class="qna-category">
                        배송 문의 &gt; 배송 일정
                        </div>
                        <div class="qna-container">
                          <div class="qna-util">
                            <div class="state">
                              답변 대기
                            </div>
                            <div class="util">
                              <button type="button" class="button">수정</button>
                              <button type="button" class="button">삭제</button>
                            </div>
                          </div>
                          <div class="question">
                            <div class="question__header">
                              <div class="title"><span>Q.</span>Q. 언제 배송이 되나요?</div>
                              <div class="date">2021.04.02</div>
                            </div>
                            <div class="question__content">
                              주문했는데 배송되는 날짜를 알 수 있을까요?
                            </div>
                            <div class="question__photo">
                              <div class="swiper-container" id="qnaPhotoSwiper">
                                <div class="swiper-wrapper">
                                  <div class="swiper-slide">
                                    <div class="upload-content">
                                      <img src="/cmsstatic/asset/images/temp/event_90x90_1.jpg" alt="이미지명">
                                    </div>
                                  </div>
                                  <div class="swiper-slide">
                                    <div class="upload-content">
                                      <img src="/cmsstatic/asset/images/temp/event_90x90_2.jpg" alt="이미지명">
                                    </div>
                                  </div>
                                  <div class="swiper-slide">
                                    <div class="upload-content">
                                      <img src="/cmsstatic/asset/images/temp/event_90x90_3.jpg" alt="이미지명">
                                    </div>
                                  </div>
                                  <div class="swiper-slide">
                                    <div class="upload-content">
                                      <img src="/cmsstatic/asset/images/temp/event_90x90_4.jpg" alt="이미지명">
                                    </div>
                                  </div>
                                  <div class="swiper-slide">
                                    <div class="upload-content">
                                      <img src="/cmsstatic/asset/images/temp/event_90x90_2.jpg" alt="이미지명">
                                    </div>
                                  </div>
                                  <div class="swiper-slide">
                                    <div class="upload-content">
                                      <img src="/cmsstatic/asset/images/temp/event_90x90_3.jpg" alt="이미지명">
                                    </div>
                                  </div>
                                  <div class="swiper-slide">
                                    <div class="upload-content">
                                      <img src="/cmsstatic/asset/images/temp/event_90x90_4.jpg" alt="이미지명">
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </li>
                      <li class="qna-list__item">
                        <div class="qna-category">
                          주문취소 문의 &gt; 취소접수 문의
                        </div>
                        <div class="qna-container">
                          <div class="qna-util">
                            <div class="state">
                              답변 완료
                            </div>
                            <div class="util">
                              <!--
                              <button type="button" class="button">수정</button>
                              <button type="button" class="button">삭제</button>
                              -->
                            </div>
                          </div>
                          <div class="question">
                            <div class="question__header">
                              <div class="title"><span>Q.</span>취소하고 싶은데</div>
                              <div class="date">2021.04.02</div>
                            </div>
                            <div class="question__content">
                              주문한 상품의 색상을 변경하고 싶은데 품절이네요. 상품 취소하고 싶은데 어떻게 해야 되나요?
                            </div>
                          </div>
                          <div class="answer">
                            <div class="answer__content">
                              안녕하세요 고객님! 구매하신 상품의 취소를 원하시면 [나의 헤지스 > 주문/배송 내역] 에서 주문 취소 버튼을 눌러주시면 취소가 가능합니다.
                            </div>
                          </div>
                        </div>
                      </li>
                    </ul>
                    <div class="list-more">
                      <button type="button" class="form-button form-button--plain">더보기 (1/20)</button>
                      <button type="button" class="form-button form-button--main">1:1 문의하기</button>
                    </div>
                  </div>
                  <!-- //문의 목록 -->
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="main-content__aside">
        <!-- 메뉴 -->
        <ul class="sidebar-menu">
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 쇼핑 내역</p>
            <ul class="menu__list">
              <li class="menu__item">
                <li class="menu__item">
                <a href="#"><i class="sprite-mypage-listsearch-small"></i>주문/배송 조회</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-claim-small"></i>취소/교환/반품</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나만의 혜택</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-coupon-small"></i>쿠폰</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-mileage-small"></i>마일리지</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-badgebook-small"></i>나의 배지</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 쇼핑 태그</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-wish-small"></i>위시 리스트</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-recent-small"></i>최근 본 상품</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-review-small"></i>내 상품평</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-push-small"></i>재입고 알림 내역</a>
              </li>
              <li class="menu__item active">
                <a href="#"><i class="sprite-mypage-qna-small"></i>내 문의 내역</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 정보</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-benefit-small"></i>회원 혜택</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-myinfo-small"></i>내 정보 변경 / 회원 탈퇴</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-address-small"></i>배송지 관리</a>
              </li>
            </ul>
          </li>
        </ul>
        <!-- // 메뉴 -->
      </div>
    </div>
  </div>
</main>
{% endblock %}

{% block modal %}
  {% include "modal/member/find-password.njk" %}
{% endblock modal %}

{% block css %}
<link rel="stylesheet" href="/asset/css/mypage.css" />
{% endblock css %}

{% block js %}
<script src="/asset/js/mypage.js"></script>
<script>
$(function(){
  new Swiper('#qnaPhotoSwiper', {
    loop: false,
    freeMode: true,
    spaceBetween: 10,
    slidesOffsetBefore: 0,
    slidesOffsetAfter: 0,
    slidesPerView: 'auto',
    breakpoints: {
      1023: {
        spaceBetween: 10,
        slidesOffsetBefore: 10,
        slidesOffsetAfter: 10,
      }
    }
  })
})
</script>
{% endblock js %}