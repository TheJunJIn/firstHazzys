{# 예상 반품비 #modalReturnCostGuide #}
{% include "modal/mypage/return-cost-guide.njk" %}

{# 예상 교환비 #modalExchangeCostGuide #}
{% include "modal/mypage/exchange-cost-guide.njk" %}

{# 취소/교환/반품 내역 삭제 #modalDeleteClaimHistory #}
{% include "modal/mypage/confirm-delete-claim-history.njk" %}

{# 나의 쿠폰 등록 #modalRegisterCoupon #}
