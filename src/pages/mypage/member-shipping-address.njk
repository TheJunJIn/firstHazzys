{% extends 'default.njk' %}

{% block content %}
<main class="shell-main shell-main--mypage">
  <div class="main-header" style="background-image:url(/cmsstatic/asset/images/myapge-visual.jpg);">
    {% include "partials/mypage/main-header.njk" %}
  </div>
  <div class="main-content">
    <div class="main-container main-content__body">
      <div class="main-content__main main-content__main--member">
        <div class="main-content__header main-content__header--sub">
          <h3 class="main-content__title">배송지 관리</h3>
          <button type="button" class="button main-content__btn-back">
            <i class="sprite-icon sprite-common sprite-common-back">뒤로가기</i>
          </button>
        </div>
        <div class="mypage-member-container">

          <div class="shipping-address">
            <div class="shipping-address__header">
              <div class="count">
                총 <span>4</span>곳
              </div>
              <div class="util">
                <button type="button" class="button button--delete">전체 삭제</button>
              </div>
            </div>
            <div class="shipping-address__content">
              <ul class="address-list">
                <li class="address-list__item">
                  <div class="form-radio">
                    <input type="radio" class="radio" name="checkDelivery" title="배송지 선택">
                    <i class="icon"></i>
                    <div class="address">
                      <div class="address-inner">
                        <span class="address__zipcode"><span class="comment">(기본 배송지)</span>06230</span>
                        <span class="address__address">서울특별시 강남구 언주로 301</span>
                        <span class="address__phone">010-1234-5678</span>
                      </div>
                    </div>
                    <div class="address-util">
                      <button type="button" class="button button--modify">수정</button>
                      <button type="button" class="button button--delete">삭제</button>
                    </div>
                  </div>
                </li>
                <li class="address-list__item">
                  <div class="form-radio">
                    <input type="radio" class="radio" name="checkDelivery" title="배송지 선택">
                    <i class="icon"></i>
                    <div class="address">
                      <div class="address-inner">
                        <span class="address__zipcode">06230</span>
                        <span class="address__address">서울특별시 강남구 언주로 301</span>
                        <span class="address__phone">010-1234-5678</span>
                      </div>
                    </div>
                    <div class="address-util">
                      <button type="button" class="button button--modify">수정</button>
                      <button type="button" class="button button--delete">삭제</button>
                    </div>
                  </div>
                </li>
                <li class="address-list__item">
                  <div class="form-radio">
                    <input type="radio" class="radio" name="checkDelivery" title="배송지 선택">
                    <i class="icon"></i>
                    <div class="address">
                      <div class="address-inner">
                        <span class="address__zipcode">06230</span>
                        <span class="address__address">서울특별시 강남구 언주로 서울특별시 강남구 언주로 서울특별시</span>
                        <span class="address__phone">010-1234-5678</span>
                      </div>
                    </div>
                    <div class="address-util">
                      <button type="button" class="button button--modify">수정</button>
                      <button type="button" class="button button--delete">삭제</button>
                    </div>
                  </div>
                </li>
                <li class="address-list__item">
                  <div class="form-radio">
                    <input type="radio" class="radio" name="checkDelivery" title="배송지 선택">
                    <i class="icon"></i>
                    <div class="address">
                      <div class="address-inner">
                        <span class="address__zipcode">06230</span>
                        <span class="address__address">서울특별시 강남구 언주로 301</span>
                        <span class="address__phone">010-1234-5678</span>
                      </div>
                    </div>
                    <div class="address-util">
                      <button type="button" class="button button--modify">수정</button>
                      <button type="button" class="button button--delete">삭제</button>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
            <div class="shipping-address__submit">
              <button type="button" class="form-button form-button--plain">배송지 추가</button>
              <button type="button" class="form-button form-button--main">기본 배송지 설정</button>
            </div>
          </div>

        </div>
      </div>

      <div class="main-content__aside">
        <!-- 메뉴 -->
        <ul class="sidebar-menu">
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 쇼핑 내역</p>
            <ul class="menu__list">
              <li class="menu__item">
                <li class="menu__item">
                <a href="#"><i class="sprite-mypage-listsearch-small"></i>주문/배송 조회</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-claim-small"></i>취소/교환/반품</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나만의 혜택</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-coupon-small"></i>쿠폰</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-mileage-small"></i>마일리지</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-badgebook-small"></i>나의 배지</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 쇼핑 태그</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-wish-small"></i>위시 리스트</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-recent-small"></i>최근 본 상품</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-review-small"></i>내 상품평</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-push-small"></i>재입고 알림 내역</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-qna-small"></i>내 문의 내역</a>
              </li>
            </ul>
          </li>
          <li class="sidebar-menu__item menu">
            <p class="menu__title">나의 정보</p>
            <ul class="menu__list">
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-benefit-small"></i>회원 혜택</a>
              </li>
              <li class="menu__item">
                <a href="#"><i class="sprite-mypage-myinfo-small"></i>내 정보 변경 / 회원 탈퇴</a>
              </li>
              <li class="menu__item active">
                <a href="#"><i class="sprite-mypage-address-small"></i>배송지 관리</a>
              </li>
            </ul>
          </li>
        </ul>
        <!-- // 메뉴 -->
      </div>
    </div>
  </div>
</main>
{% endblock %}

