{% extends 'default.njk' %}

{% block content %}
<main class="shell-main shell-main--event">
  <div class="main-header">
    <h2 class="main-header__title">이벤트</h2>
    <button type="button" class="button main-header__btn-back">
      <i class="sprite-icon sprite-common sprite-common-back">뒤로가기</i>
    </button>
  </div>
  <div class="main-content">
    <div class="event-wrap">
      <div class="tabs">
        <div class="tablist" role="tablist" aria-label="event">
          <button type="button" class="tab" role="tab" aria-selected="true" aria-controls="eventIng-tab" id="eventIng">진행중인 이벤트</button>
